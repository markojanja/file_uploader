<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/header") %>
    <div class="container">
      <main class="share-main">
        <div class="share-container">
          <div class="share-content">
            <h1><%= data.name %></h1>
            <p>author:batman</p>
            <p>file size: 15MB</p>
            <p>file type: .png</p>
            <p>created at: 12/02/2024, 13:00:00 PM</p>
            <p>expires at: <%= data.expiresAt %></p>
            <button class="share-btn-primary" style="align-self: flex-start">DOWNLOAD</button>
          </div>
          <% if (data.ext.includes('jpg') || data.ext.includes("jpeg") || data.ext.includes("png")
          || data.ext.includes("gif")) { %>
          <div class="share-img">
            <img src="<%= data.url %> " alt="<%= data.name %> " />
          </div>
          <% } %> <% if (data.ext.includes('pdf')) { %>
          <div class="share-img">
            <img src="/assets/pdf.png" alt="pdf file" />
          </div>
          <% } %>
        </div>
      </main>
    </div>
    <%- include("partials/footer") %>
  </body>
</html>
