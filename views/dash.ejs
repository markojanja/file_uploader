<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/header") %>
    <main>
      <h1><%= title %></h1>

      <a href="/dashboard/<%= parentId ? parentId + '/' : '' %>create">Add new folder</a>
      <a href="/dashboard/<%= parentId ? parentId + '/' : '' %>upload">Upload file</a>

      <ul>
        <% data.forEach(item => { %>
        <li>
          <% if (item.type === 'FILE') { %>
          <i class="fa-solid fa-file"></i>
          <a href="<%= item.url %>" target="_blank"> <%= item.name %> </a>
          <span> <%= item.ext_name %> </span>
          <a href="/dashboard/<%= item.id %>/download"><i class="fa-solid fa-download"></i></a>
          <a href="/dashboard/<%= item.id %>/delete"><i class="fa-solid fa-trash"></i></a>
          <% } else if (item.type === 'FOLDER') { %>
          <i class="fa-solid fa-folder"></i>
          <a href="/dashboard/<%= item.id %>"><%= item.name %></a>
          <a href="/dashboard/<%= item.id %>/edit"><i class="fa-solid fa-edit"></i></a>
          <a href="/dashboard/<%= item.id %>/remove"><i class="fa-solid fa-trash"></i></a>
          <% } %>
        </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
