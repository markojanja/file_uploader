<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/header") %>
    <div class="form-container">
      <h1>Edit folder</h1>
      <form
        action="/dashboard<%= parentId ? '/' + parentId + '/edit' : '/edit' %>"
        method="POST"
        class="form"
      >
        <label for="folder">Folder name:</label>
        <input type="text" placeholder="folder" name="name" value="<%= folder.name %>" />
        <button class="btn-primary-sm">save</button>
      </form>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
